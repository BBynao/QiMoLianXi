<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="主页"
            android:drawableTop="@drawable/home_selecte"
            android:gravity="center"
            android:textColor="@drawable/home_text_selecte"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rb_find"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发现"
            android:drawableTop="@drawable/fa_selecte"
            android:textColor="@drawable/home_text_selecte"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableTop="@mipmap/page_release"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rb_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="成长"
            android:drawableTop="@drawable/group_selecte"
            android:gravity="center"
            android:textColor="@drawable/home_text_selecte"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的"
            android:drawableTop="@drawable/my_selecte"
            android:gravity="center"
            android:textColor="@drawable/home_text_selecte"
            android:button="@null"/>



    </RadioGroup>

</LinearLayout>